@page
@model BugTracker.Web.Pages.Users.ManageRolesModel
@{
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.UserRolesModels.Count; i++) {

                <div class="form-check m-1">
                    <input class="form-control" type="hidden" asp-for="UserRolesModels[i].RoleName" />
                    <input asp-for="UserRolesModels[i].Selected" class="form-check-input" />
                    <label class="form-check-label">
                        @Model.UserRolesModels[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-page="./Edit" asp-route-id="@Model.User.Id"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>