@page
@model BugTracker.Web.Pages.Issues.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Issue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Issue.Id" />
            <div class="form-group">
                <label asp-for="Issue.Descreption" class="control-label"></label>
                <input asp-for="Issue.Descreption" class="form-control" />
                <span asp-validation-for="Issue.Descreption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.CreatorId" class="control-label"></label>
                <select asp-for="Issue.CreatorId" class="form-control" asp-items="ViewBag.CreatorId"></select>
                <span asp-validation-for="Issue.CreatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.IssueStatus" class="control-label"></label>
                <select asp-for="Issue.IssueStatus" class="form-control" asp-items="Html.GetEnumSelectList<BugTracker.Dal.Entities.IssueStatus>()"></select>
                <span asp-validation-for="Issue.IssueStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.AssignedToId" class="control-label"></label>
                <select asp-for="Issue.AssignedToId" class="form-control" asp-items="ViewBag.AssignedToId">
                    <option value="">None</option>
                </select>
                <span asp-validation-for="Issue.AssignedToId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.ProjectId" class="control-label"></label>
                <select asp-for="Issue.ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                <span asp-validation-for="Issue.ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.IssuePriority" class="control-label"></label>
                <select asp-for="Issue.IssuePriority" class="form-control" asp-items="Html.GetEnumSelectList<BugTracker.Dal.Entities.IssuePriority>()"></select>
                <span asp-validation-for="Issue.IssuePriority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.IssueSeverity" class="control-label"></label>
                <select asp-for="Issue.IssueSeverity" class="form-control" asp-items="Html.GetEnumSelectList<BugTracker.Dal.Entities.IssueSeverity>()"></select>
                <span asp-validation-for="Issue.IssueSeverity" class="text-danger"></span>
            </div>
            @* TODO: Ezt levenni innen. Ha a status lezárt-ra módosul akkor állítsuk "most"-ra*@
            <div class="form-group">
                <label asp-for="Issue.SolvedOn" class="control-label"></label>
                <input asp-for="Issue.SolvedOn" class="form-control" />
                <span asp-validation-for="Issue.SolvedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
